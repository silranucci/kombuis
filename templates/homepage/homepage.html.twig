{% extends 'base.html.twig' %}

{% block main %}
    <div class="row m-5">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    Expiring Product
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Scadenza</th>
                            <th scope="col">Quantity</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for productItem in productItems %}
                            <tr>
                                <td>{{ productItem.product.name }}</td>
                                <td>{{ productItem.useByDate | date('d-m-Y') }}</td>
                                <td>{{ productItem.quantity }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('app_expiring_product') }}" class="btn btn-primary">Show All</a>
                </div>
            </div>
        </div>

        <div class="col-6">

        </div>
    </div>

{% endblock %}